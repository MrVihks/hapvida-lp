---
import BaseLayout from "../layouts/BaseLayout.astro";

import Avatar from "../../assets/avatar.png";
import Image from "astro/components/Image.astro";
import Button from "../components/Button.astro";
---

<BaseLayout>
	<section
		class="flex min-h-screen flex-col items-center bg-brand min-w-screen gap-10"
	>
		<Image
			src={Avatar}
			height={100}
			width={100}
			alt={"Logotipo da Hapvida"}
			class="mt-20"
		/>
		<h1 class="font-montserrat text-4xl text-white font-bold">Hapvida</h1>

		<article class="flex flex-col gap-7 justify-center items-center">
			<Button href="https://api.whatsapp.com/send?phone=5511977598004"
				>SEGUNDA VIA DA MENSALIDADE</Button
			>
			<Button href="https://api.whatsapp.com/send?phone=5511977598004"
				>MENSALIDADE EM ATRASO</Button
			>
			<Button href="https://api.whatsapp.com/send?phone=5511977598004"
				>MARCAR EXAME</Button
			>
			<Button href="https://api.whatsapp.com/send?phone=5511977598004"
				>SOLICITAR ATENDIMENTO</Button
			>
		</article>
	</section>
	<section  class="flex h-36 items-center justify-center uppercase font-inter font-medium"><a href="/politica">➡️ POLÍTICAS DE PRIVACIDADE</a></section>
</BaseLayout>
